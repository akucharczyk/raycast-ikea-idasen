{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "raycast-ikea-idasen",
  "title": "raycast-ikea-idasen",
  "description": "React component for IKEA IDASEN",
  "icon": "command-icon.png",
  "author": "antoni",
  "categories": [
    "Productivity",
    "Other"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Ikea Idasen",
      "description": "Control your Ikea Idasen within raycast",
      "mode": "view"
    },
    {
      "name": "stand-up",
      "title": "Stand Up",
      "subtitle": "Ikea Idasen",
      "description": "Set your Ikea Idasen to stand up position",
      "keywords": ["stand", "up"],
      "mode": "no-view"
    },
    {
      "name": "sit-down",
      "title": "Sit down",
      "subtitle": "Ikea Idasen",
      "description": "Set your Ikea Idasen to sit down position",
      "keywords": ["sit", "down"],
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.36.0",
    "run-applescript": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
